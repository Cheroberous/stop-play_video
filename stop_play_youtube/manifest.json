{
  "manifest_version": 3,
  "name": "pause_video",
  "version": "1.0",
  "description": "window to stop video",

  "background": {
    "service_worker": "background.js"
  }, 

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "run_at" : "document_start",
      "js": ["contentScript.js"]
    }
  ],
  
  "host_permissions": ["http://*/*",
    "https://*/*"],

  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html"
  }

  
}
